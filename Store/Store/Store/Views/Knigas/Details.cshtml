@model Store.Models.Kniga

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Kniga</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naslov)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>
        <dt class="col-sm-3">Slika:</dt>
        <dd class="col-sm-9">
            <img src="@Url.Content("~/images/" + Model.SlikaUrl)" alt="@Model.Naslov" style="max-width: 50%; height: auto;">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Godina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Godina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrStrani)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrStrani)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Zanr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zanr)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tirazh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tirazh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Izdavac)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Izdavac)
        </dd>
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Avtori)</dt>
        <dd class="col-sm-9">
            @if (Model.Avtori != null && Model.Avtori.Any())
                {
                    foreach (var bookAvtor in Model.Avtori)
                    {
                        if (bookAvtor != null && bookAvtor.Avtor != null)
                        {
            <a asp-controller="Avtors" asp-action="Details" asp-route-id="@bookAvtor.AvtorId">@bookAvtor.Avtor.FullName</a>
            <br />
                        }
                    }
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
